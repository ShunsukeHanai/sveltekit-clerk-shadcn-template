		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.13.4",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.0.0-next.91",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.2",
