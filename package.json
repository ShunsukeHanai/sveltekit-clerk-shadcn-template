		"vite": "^6.0.0",
		"vitest": "^3.0.6"
	},
	"dependencies": {
		"@clerk/localizations": "^3.10.6",
		"@paralleldrive/cuid2": "^2.2.2",
		"drizzle-orm": "^0.38.4",
		"mysql2": "^3.12.0",
		"svelte-clerk": "^0.8.3"
	}
